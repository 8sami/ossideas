{
  "type": "object",
  "properties": {
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50,
            "description": "Short, descriptive name of the feature"
          },
          "description": {
            "type": "string",
            "minLength": 20,
            "maxLength": 300,
            "description": "Concise description of what the feature does"
          },
          "priority": {
            "type": "string",
            "enum": ["high", "medium", "low"],
            "description": "Priority level of the feature"
          },
          "userValue": {
            "type": "string",
            "minLength": 20,
            "maxLength": 300,
            "description": "Clear explanation of the value this provides to users"
          }
        },
        "required": ["name", "description", "priority", "userValue"],
        "additionalProperties": false
      },
      "minItems": 3,
      "maxItems": 5,
      "description": "Core features for the MVP"
    },
    "mvpScope": {
      "type": "string",
      "minLength": 50,
      "maxLength": 500,
      "description": "A 2-3 sentence description of the overall MVP scope and focus"
    },
    "futureFeatures": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 10,
        "maxLength": 200
      },
      "minItems": 2,
      "maxItems": 5,
      "description": "Features for post-MVP development"
    }
  },
  "required": ["features", "mvpScope", "futureFeatures"],
  "additionalProperties": false
}