{
  "type": "object",
  "properties": {
    "repository": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Repository UUID"
        },
        "name": {
          "type": "string",
          "description": "Repository name"
        },
        "full_name": {
          "type": "string",
          "description": "Full repository name (owner/repo)"
        },
        "description": {
          "type": "string",
          "description": "Repository description"
        },
        "html_url": {
          "type": "string",
          "description": "Repository URL"
        },
        "stargazers_count": {
          "type": "number",
          "description": "Number of stars"
        },
        "forks_count": {
          "type": "number",
          "description": "Number of forks"
        },
        "topics": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Repository topics/tags"
        },
        "license_name": {
          "type": "string",
          "description": "License name"
        },
        "languages": {
          "type": "object",
          "description": "Programming languages used with percentages"
        }
      },
      "required": ["id", "name", "full_name", "html_url"]
    },
    "idea": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Idea UUID"
        },
        "title": {
          "type": "string",
          "description": "Idea title"
        },
        "tagline": {
          "type": "string",
          "description": "Idea tagline/one-sentence value proposition"
        },
        "overview": {
          "type": "object",
          "properties": {
            "problem": {
              "type": "string",
              "description": "Problem statement"
            },
            "vision": {
              "type": "string",
              "description": "Product vision"
            },
            "validation": {
              "type": "object",
              "properties": {
                "validatedDemand": {
                  "type": "string",
                  "description": "Validated demand evidence"
                },
                "marketTrend": {
                  "type": "string",
                  "description": "Market trend information"
                }
              }
            }
          },
          "required": ["problem", "vision"]
        }
      },
      "required": ["id", "title", "overview"]
    },
    "mvpFeatures": {
      "type": "object",
      "properties": {
        "features": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Feature name"
              },
              "description": {
                "type": "string",
                "description": "Feature description"
              },
              "priority": {
                "type": "string",
                "enum": ["high", "medium", "low"],
                "description": "Feature priority"
              },
              "userValue": {
                "type": "string",
                "description": "Value provided to users"
              }
            }
          },
          "description": "Core MVP features"
        },
        "mvpScope": {
          "type": "string",
          "description": "Overall MVP scope description"
        },
        "futureFeatures": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Features for future development"
        }
      },
      "description": "MVP features information (may be null if not available)"
    }
  },
  "required": ["repository", "idea"]
}