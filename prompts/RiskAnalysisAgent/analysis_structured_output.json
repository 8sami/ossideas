{
  "type": "object",
  "properties": {
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "minLength": 10,
            "maxLength": 300,
            "description": "Clear description of the risk"
          },
          "impact": {
            "type": "string",
            "enum": ["high", "medium", "low"],
            "description": "Severity of impact if risk materializes"
          },
          "probability": {
            "type": "string",
            "enum": ["high", "medium", "low"],
            "description": "Likelihood of risk occurring"
          },
          "mitigation": {
            "type": "string",
            "minLength": 20,
            "maxLength": 500,
            "description": "Specific strategy to mitigate this risk"
          }
        },
        "required": ["description", "impact", "probability", "mitigation"],
        "additionalProperties": false
      },
      "minItems": 3,
      "maxItems": 5,
      "description": "Key risks that could potentially kill the business idea"
    },
    "criticalRisks": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 10,
        "maxLength": 200
      },
      "minItems": 1,
      "maxItems": 2,
      "description": "Most critical risks requiring immediate attention"
    },
    "contingencyPlans": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 20,
        "maxLength": 500
      },
      "minItems": 2,
      "maxItems": 3,
      "description": "Plans for worst-case scenarios"
    }
  },
  "required": ["risks", "criticalRisks", "contingencyPlans"],
  "additionalProperties": false
}