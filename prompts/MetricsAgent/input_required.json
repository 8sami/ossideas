{
  "type": "object",
  "properties": {
    "repository": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Repository UUID"
        },
        "name": {
          "type": "string",
          "description": "Repository name"
        },
        "full_name": {
          "type": "string",
          "description": "Full repository name (owner/repo)"
        },
        "description": {
          "type": "string",
          "description": "Repository description"
        },
        "html_url": {
          "type": "string",
          "description": "Repository URL"
        },
        "stargazers_count": {
          "type": "number",
          "description": "Number of stars"
        },
        "forks_count": {
          "type": "number",
          "description": "Number of forks"
        },
        "topics": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Repository topics/tags"
        },
        "license_name": {
          "type": "string",
          "description": "License name"
        },
        "languages": {
          "type": "object",
          "description": "Programming languages used with percentages"
        }
      },
      "required": ["id", "name", "full_name", "html_url"]
    },
    "idea": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Idea UUID"
        },
        "title": {
          "type": "string",
          "description": "Idea title"
        },
        "tagline": {
          "type": "string",
          "description": "Idea tagline/one-sentence value proposition"
        },
        "overview": {
          "type": "object",
          "properties": {
            "problem": {
              "type": "string",
              "description": "Problem statement"
            },
            "vision": {
              "type": "string",
              "description": "Product vision"
            },
            "validation": {
              "type": "object",
              "properties": {
                "validatedDemand": {
                  "type": "string",
                  "description": "Validated demand evidence"
                },
                "marketTrend": {
                  "type": "string",
                  "description": "Market trend information"
                }
              }
            }
          },
          "required": ["problem", "vision"]
        }
      },
      "required": ["id", "title", "overview"]
    },
    "monetizationStrategy": {
      "type": "object",
      "properties": {
        "pricingModel": {
          "type": "string",
          "description": "Primary pricing model"
        },
        "pricingTiers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Tier name"
              },
              "price": {
                "type": "string",
                "description": "Price point"
              },
              "keyFeatures": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Key features in this tier"
              }
            }
          },
          "description": "Pricing tiers"
        },
        "valueMetric": {
          "type": "string",
          "description": "What is being charged for"
        },
        "revenueStreams": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Additional revenue streams"
        }
      },
      "description": "Monetization strategy information (may be null if not available)"
    }
  },
  "required": ["repository", "idea"]
}