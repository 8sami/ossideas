{
  "type": "object",
  "properties": {
    "repoId": {
      "type": "string",
      "description": "Repository identifier"
    },
    "tunerRuns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "runIndex": {
            "type": "integer",
            "minimum": 1,
            "description": "Run sequence number"
          },
          "max_tokens": {
            "type": "integer",
            "minimum": 100,
            "maximum": 2000,
            "description": "Maximum tokens for generation"
          },
          "temperature": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Sampling temperature"
          },
          "top_k": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "description": "Top-k sampling parameter"
          },
          "top_p": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Top-p sampling parameter"
          },
          "harm_category": {
            "type": "string",
            "enum": ["HARASSMENT", "HATE_SPEECH", "SEXUALLY_EXPLICIT", "DANGEROUS_CONTENT"],
            "description": "Harm category for safety filtering"
          },
          "block_threshold": {
            "type": "string",
            "enum": ["BLOCK_LOW_AND_ABOVE", "BLOCK_MEDIUM_AND_ABOVE", "BLOCK_ONLY_HIGH", "BLOCK_NONE"],
            "description": "Safety blocking threshold"
          },
          "rationale": {
            "type": "string",
            "maxLength": 100,
            "description": "Brief explanation for this configuration"
          }
        },
        "required": ["runIndex", "max_tokens", "temperature", "top_k", "top_p", "harm_category", "block_threshold", "rationale"],
        "additionalProperties": false
      },
      "minItems": 1,
      "description": "Array of tuning configurations"
    }
  },
  "required": ["repoId", "tunerRuns"],
  "additionalProperties": false
}