{
  "type": "object",
  "properties": {
    "skip_note": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "framework_starter",
                "generic_template", 
                "no_unique_logic",
                "insufficient_data",
                "archived_project",
                "personal_project",
                "educational_only",
                "deprecated_tech"
              ],
              "description": "Category of skip reason"
            },
            "message": {
              "type": "string",
              "maxLength": 200,
              "description": "Brief explanation of why repository was skipped"
            }
          },
          "required": ["type", "message"],
          "additionalProperties": false
        }
      ]
    },
    "is_skipped": {
      "type": "boolean",
      "description": "Whether the repository should be skipped from further processing"
    }
  },
  "required": ["skip_note", "is_skipped"],
  "additionalProperties": false
}