{
  "type": "object",
  "properties": {
    "directCompetitors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 100,
            "description": "Name of the direct competitor"
          },
          "strengths": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 5,
              "maxLength": 200
            },
            "minItems": 1,
            "maxItems": 5,
            "description": "Specific strengths of this competitor"
          },
          "weaknesses": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 5,
              "maxLength": 200
            },
            "minItems": 1,
            "maxItems": 5,
            "description": "Specific weaknesses of this competitor"
          },
          "marketShare": {
            "type": "string",
            "minLength": 5,
            "maxLength": 100,
            "description": "Estimated market share or position"
          }
        },
        "required": ["name", "strengths", "weaknesses", "marketShare"],
        "additionalProperties": false
      },
      "minItems": 2,
      "maxItems": 3,
      "description": "Direct competitors that solve the same problem in a similar way"
    },
    "indirectCompetitors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 100,
            "description": "Name of the indirect competitor or alternative solution"
          },
          "description": {
            "type": "string",
            "minLength": 20,
            "maxLength": 300,
            "description": "Brief description of this alternative solution"
          },
          "threat": {
            "type": "string",
            "enum": ["high", "medium", "low"],
            "description": "Level of competitive threat posed"
          }
        },
        "required": ["name", "description", "threat"],
        "additionalProperties": false
      },
      "minItems": 2,
      "maxItems": 3,
      "description": "Indirect competitors or alternative solutions"
    },
    "competitiveAdvantage": {
      "type": "string",
      "minLength": 50,
      "maxLength": 500,
      "description": "Clear statement of unique value proposition and 10x advantage"
    }
  },
  "required": ["directCompetitors", "indirectCompetitors", "competitiveAdvantage"],
  "additionalProperties": false
}