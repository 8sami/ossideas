{
  "type": "object",
  "properties": {
    "opportunitySummary": {
      "type": "object",
      "properties": {
        "opportunityRank": {
          "type": "string",
          "pattern": "^\\d+(\\.\\d+)?/100$",
          "description": "Opportunity score out of 100"
        },
        "problemStatement": {
          "type": "string",
          "minLength": 50,
          "maxLength": 500,
          "description": "Clear problem statement"
        },
        "productVision": {
          "type": "string",
          "minLength": 50,
          "maxLength": 500,
          "description": "Product vision and solution"
        },
        "marketValidation": {
          "type": "object",
          "properties": {
            "validatedDemand": {
              "type": "string",
              "description": "Evidence of market demand"
            },
            "marketTrend": {
              "type": "string",
              "minLength": 30,
              "maxLength": 300,
              "description": "Current market trends"
            }
          },
          "required": ["validatedDemand", "marketTrend"],
          "additionalProperties": false
        },
        "strategicScores": {
          "type": "object",
          "properties": {
            "licenseSuitability": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?/10$",
              "description": "License suitability score"
            },
            "uiUxPotential": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?/10$",
              "description": "UI/UX potential score"
            },
            "marketDemand": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?/10$",
              "description": "Market demand score"
            },
            "integrationEase": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?/10$",
              "description": "Integration ease score"
            },
            "valueAddition": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?/10$",
              "description": "Value addition score"
            },
            "competitionIntensity": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?/10$",
              "description": "Competition intensity score"
            },
            "monetizationPotential": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?/10$",
              "description": "Monetization potential score"
            },
            "complexityLevel": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?/10$",
              "description": "Implementation complexity score"
            }
          },
          "required": ["licenseSuitability", "uiUxPotential", "marketDemand", "integrationEase", "valueAddition", "competitionIntensity", "monetizationPotential", "complexityLevel"],
          "additionalProperties": false
        },
        "repositoryMetadata": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "description": "Repository URL"
            },
            "license": {
              "type": "string",
              "description": "License type"
            },
            "lastActivity": {
              "type": "string",
              "description": "Last activity date"
            },
            "openIssues": {
              "type": "string",
              "description": "Number of open issues"
            },
            "createdDate": {
              "type": "string",
              "description": "Repository creation date"
            }
          },
          "required": ["url", "license", "lastActivity", "openIssues", "createdDate"],
          "additionalProperties": false
        }
      },
      "required": ["opportunityRank", "problemStatement", "productVision", "marketValidation", "strategicScores", "repositoryMetadata"],
      "additionalProperties": false
    }
  },
  "required": ["opportunitySummary"],
  "additionalProperties": false
}