{
  "type": "object",
  "properties": {
    "pricingModel": {
      "type": "string",
      "enum": ["Subscription", "Freemium", "Usage-Based", "One-Time", "Open Core", "Marketplace", "Other"],
      "description": "Primary pricing model for the business"
    },
    "pricingTiers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 50,
            "description": "Name of the pricing tier"
          },
          "price": {
            "type": "string",
            "minLength": 2,
            "maxLength": 50,
            "description": "Price point with unit (e.g., '$10/month')"
          },
          "keyFeatures": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 3,
              "maxLength": 200
            },
            "minItems": 2,
            "maxItems": 8,
            "description": "Key features included in this tier"
          }
        },
        "required": ["name", "price", "keyFeatures"],
        "additionalProperties": false
      },
      "minItems": 2,
      "maxItems": 5,
      "description": "Pricing tiers from free/basic to premium/enterprise"
    },
    "valueMetric": {
      "type": "string",
      "minLength": 5,
      "maxLength": 200,
      "description": "What you're charging for (e.g., seats, API calls, storage)"
    },
    "revenueStreams": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 5,
        "maxLength": 200
      },
      "minItems": 1,
      "maxItems": 5,
      "description": "Additional revenue streams beyond core pricing"
    }
  },
  "required": ["pricingModel", "pricingTiers", "valueMetric", "revenueStreams"],
  "additionalProperties": false
}