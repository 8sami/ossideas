{
  "type": "object",
  "properties": {
    "repository_id": {
      "type": "string",
      "format": "uuid",
      "description": "Repository UUID reference"
    },
    "title": {
      "type": "string",
      "minLength": 10,
      "maxLength": 100,
      "description": "Crisp, descriptive business idea name"
    },
    "overall_teardown_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Overall opportunity score"
    },
    "overview": {
      "type": "object",
      "properties": {
        "problem": {
          "type": "string",
          "minLength": 30,
          "maxLength": 300,
          "description": "Problem statement summary"
        },
        "vision": {
          "type": "string",
          "minLength": 30,
          "maxLength": 300,
          "description": "Product vision summary"
        },
        "validation": {
          "type": "object",
          "description": "Market validation data"
        }
      },
      "required": ["problem", "vision", "validation"],
      "additionalProperties": false
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 50
      },
      "minItems": 2,
      "maxItems": 4,
      "description": "Technical/business categories"
    },
    "industries": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 50
      },
      "minItems": 1,
      "maxItems": 3,
      "description": "Target industries"
    }
  },
  "required": ["repository_id", "title", "overall_teardown_score", "overview", "categories", "industries"],
  "additionalProperties": false
}